<Window x:Class="SyncIONetSealRemoteCode.Windows.winAddPort"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SyncIONetSealRemoteCode.Windows"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        Title="Add Port" Height="110" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <DockPanel Margin="2">
            <Label Content="Port: " />
            <TextBox x:Name="tbPort"/>
        </DockPanel>


        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnAccept" Content="Accept" Width="70" Margin="10" Click="btnAccept_Click"/>
            <Button x:Name="btnCancel" Content="Cancel" Width="70" Margin="10" Click="Cancel_Click" />
        </StackPanel>


    </Grid>
</Window>
