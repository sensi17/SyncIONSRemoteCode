<Window x:Class="SyncIONetSealRemoteCode.Windows.winNetworkSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SyncIONetSealRemoteCode.Windows"
        mc:Ignorable="d"
        MinHeight="300"
        MinWidth="250"
        Title="Network Settings" Height="300" Width="250">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <ListBox x:Name="lbPortList" Margin="10" DisplayMemberPath="EndPoint"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnAdd" Content="Add" Width="70" Margin="10" Click="btnAdd_Click"/>
            <Button x:Name="btnRemove" Content="Remove" Width="70" Margin="10" Click="btnRemove_Click" />
        </StackPanel>
        
    </Grid>
</Window>
